{
  "compilerOptions": {
    "strict": true,
    "module": "es2020",
    "target": "esnext",
    "jsx": "preserve",

    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "lib": ["es6", "dom"],
    "rootDir": "src",
    "moduleResolution": "bundler",
    "downlevelIteration": true,
    "strictNullChecks": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "fixture"]
}
